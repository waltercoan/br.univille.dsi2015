<?xml version="1.0" encoding="UTF-8"?>
<persistence>
    <!--Nome do contexto que configura o Provedor de PersistÃªncia -->
    <persistence-unit name="dsi2015context">
    	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/dsi2015</jta-data-source>
        <properties>
            <!--  re cria as tabelas a cada deploy -->
            <property name="eclipselink.ddl-generation" value="cdrop-and-create-tables"/>
            <!--  re cria todo o banco a cada deploy -->
            <!--  <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>-->
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
        </properties>      
    </persistence-unit>
</persistence>



